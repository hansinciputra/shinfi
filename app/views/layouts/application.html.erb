<!DOCTYPE html>
<html>
<head>
  <title>Shinfi</title>
  <%= stylesheet_link_tag 'application' , :media => 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <link href='https://fonts.googleapis.com/css?family=Amaranth' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
  <div id="logo"><%= image_tag("LOGO.png") %></div>

  <%if current_user%>
    <div id="logout">
      <%= link_to "logout", log_out_path %>
    </div>
    <div id = "session_status">
      <p>Welcome <%= current_user.name %>!</p>
    </div>

  <%else%>
  <div id="login">
      <%=form_tag sessions_path do %>
          <ul>
            <li>email</li>
            <li><%= text_field_tag "email" ,'',size: 10%> </li>
            <li>password</li>
            <li><%= password_field_tag "password",'',size:10%></li>
            <li><%= submit_tag "Login"%></li>
            <li id = "signup"> || <%= link_to "Sign Up" , sign_up_path%></li>
          </ul>
      <%end%>
  </div>    
 
  <%end%>
 <% if current_user && current_user.role == "Admin" %>
    <div id="head_menu">      
    		<ul>
    			<li><%= link_to 'Home  |' , root_path %></li>
    			<li><%= link_to 'Orders |', orders_path %></li>
    			<li><%= link_to 'Orders - PO |', order_pos_path %></li>
    			<li><%= link_to 'Inventories |', inventories_path %>
            <ul class = "dropdown-menu">
              <li><%=link_to 'Category', categories_path%></li>
               <li><%=link_to 'Type', type_inventories_path%></li>
            </ul>
          </li>
    			<li><%= link_to 'Customers |', customers_path %></li>
    		</ul>
      </div>
        <%elsif current_user%>
        <div id="head_menu"> 
        <ul>
          <li><%= link_to 'Home  |' , root_path %></li>
          <li><%= link_to 'Inventories |', inventories_path %></li>
        </ul>
        </div>
  <%end%>
</head>
<body>
<div id="flash_notice">
  <% flash.each do |key , value| %>
  	<p><%= value%></p>
  <% end %>
</div>
<%= yield %>

</body>
<footer>
  <%= render 'layouts/footer'%>
</footer>
</html>
