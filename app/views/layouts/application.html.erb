<!DOCTYPE html>
<html>
<head>
  <title>Shinfi</title>
  <%= stylesheet_link_tag 'application' , :media => 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='https://fonts.googleapis.com/css?family=Amaranth' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
  <div id="logo"><%= image_tag("LOGO.png") %></div>

  <%if current_user%>
    <div id="logout">
      <%= link_to "logout", log_out_path %>
    </div>
    <div id = "session_status">
      <p>Welcome <%= current_user.name %></p>
    </div>

  <%else%>
  <div id="login">
      <%=form_tag sessions_path do %>
          <ul>
            <li><%= label_tag "email" %><%= text_field_tag "email"%> </li>
            <li><%= label_tag "password" %><%= password_field_tag "password"%></li>
            <li><%= submit_tag "Login"%></li>
          </ul>
      <%end%>
      <p><%= link_to "Sign Up" , sign_up_path%></p>
  </div>
 
  <%end%>
  <% if current_user %>
    <div id="head_menu">
    		<ul>
    			<li><%= link_to 'Home  |' , root_path %></li>
    			<li><%= link_to 'Orders |', orders_path %></li>
    			<li><%= link_to 'Orders - PO |', order_pos_path %></li>
    			<li><%= link_to 'Inventories |', inventories_path %></li>
    			<li><%= link_to 'Customers |', customers_path %></li>
    		</ul>
    </div>
  <%end%>
</head>
<body>
<div id="flash_notice">
  <% flash.each do |key , value| %>
  	<p><%= value%></p>
  <% end %>
</div>
<%= yield %>

</body>
</html>
