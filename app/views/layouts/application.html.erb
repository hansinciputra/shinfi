<!DOCTYPE html>
<html>
<div id="background_color">
<head>
  <%  session[:return_to] = request.referer %>
  <% if current_user && current_user.role == "Admin" %>
      <%= render 'layouts/adminmenu'%>
  <%end%>
  <title>Shinfi</title>
  <!--fb comment manage-->  
  <%= render 'layouts/fbhelper'%>

  <%= stylesheet_link_tag 'application' , :media => 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <link href='https://fonts.googleapis.com/css?family=Amaranth' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
  <%= csrf_meta_tags %>
  <div id="banner_index">
    <%= render 'layouts/banner'%>
  </div>
  <div id="head_menu_anchor"></div>
  <div id="head_menu">
     <%= render 'layouts/headmenu'%>
  </div><!--end of head menu-->
 
   
</head>
<body>
  
  <!--facebook like plugin-->
  <div id="fb-root"></div>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1117317048288129',
      xfbml      : true,
      status     : true,
      version    : 'v2.5'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

  <div id="flash_notice">
    <% flash.each do |key , value| %>
    	<p><%= value%></p>
    <% end %>
  </div>
<%= yield %>
  <div id="fb_message">
    <div id="fb_message_hide"><b>Hubungi kami disini!</b></div>
    <div id ="msg_box">
      <div class="fb-page" data-href="https://www.facebook.com/shinfithecrafts" data-tabs="messages" data-width="250" data-height="350" data-small-header="true" data-adapt-container-width="true" data-hide-cover="true" data-show-facepile="true"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/shinfithecrafts"><a href="https://www.facebook.com/shinfithecrafts">Shinfithecraft</a></blockquote></div></div>
    </div>
  </div>
</div>
</body>
<footer>
  <%= render 'layouts/footer'%>
</footer>
</html>
