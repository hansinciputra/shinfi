    <div id="promo"></div>
    <div id="logo"><%= link_to(image_tag("LOGO.png"),root_path)%></div>
    <div class="cart">
      <div id="cart_image"><%= image_tag("cart.png") %></div>
      <br>
      <div id = "cart_link">
        <%if session[:cart]%>
           <%= link_to 'Keranjang Saya', cart_index_path  %>(<%= session[:cart].count %>)
        <%else%>
           Belanjaan anda (0)
        <%end%>
      </div>
            <div id="cart_thumb_caller">|v </div>
     
      <!--beginning of cart_thumb-->
      <% if session[:cart] && ((session[:cart_count] != session[:cart].count )||session[:cart].count == 1) %>
      <% session[:cart_count] = session[:cart].count %>
        <div id = "cart_thumb_content"><h2 style ="text-align:center;"><b>~Your Craft Kit~</b></h2>
        <hr>
      <%
      session[:cart].each do |id , quantity|
      product = Inventory.find_by(:id => id)
      prod_img = ProductImage.find_by(:inventory_id => id)
      %>
          <div id = "cart_thumb_prod_detail_container">
            <div id="cart_thumb_prod_pic"><%=image_tag(prod_img.prod_img_url(:medium_thumb).to_s)%></div>
            <div id="cart_thumb_prod_info">
              <ul>
                <li><b style ="font-size:1.2em;"><i><%=product.name%></i></b></li>
                <li><i><%= product.category %></i></li>
                <li><%= product.meter %> <%=product.ukuran%></li>
                <li><b><%= number_to_currency(product.sellprice, :unit => "Rp. ") %> / <%=product.satuan%></b></li>
              </ul>
            </div>
          </div>
            
        <%end%>
        <div class ="checkout_button">
            <%= link_to 'Checkout' , cart_index_path %>
         </div>
        </div>
      <%end%>
        <!--end of cart_thumb-->
    </div>
