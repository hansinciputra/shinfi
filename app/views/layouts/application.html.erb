              <li><%=link_to 'Category', categories_path%></li>
               <li><%=link_to 'Type', type_inventories_path%></li>
            </ul>
          </li>
    			<li><%= link_to 'Customers |', customers_path %></li> 
          <li><%= link_to 'Users |', users_path %></li>
          <li id ="logout"><b><%= link_to "logout!", log_out_path %></b></li>
    		</ul>
      </div>
        <%elsif current_user%>
        <div id="head_menu"> 
          <ul>
            <li><%= link_to 'Home  |' , root_path %></li>
            <li><%= link_to 'Inventories |', inventories_path %></li>
            <li><%= link_to 'My Page |', user_path(session[:user_id]) %></li>
            <li id ="logout"><b><%= link_to "logout!", log_out_path %></b></li>
          </ul>
        </div>
  <%end%>
</head>
<body>
  <div id="flash_notice">
    <% flash.each do |key , value| %>
    	<p><%= value%></p>
    <% end %>
  </div>
<%= yield %>

</body>
<footer>
  <%= render 'layouts/footer'%>
</footer>
</html>
