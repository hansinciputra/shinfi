<div id = "universal_form">
	<!--multiplat is true for uploading file-->
<%= form_for @inventory, html: {multipart: true} do |t| %>
	<% if @inventory.errors.any? %>
		<h2>Errors:</h2>
		<ul>
			<% @inventory.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<%end%>	
	<p>	
		<%= t.label :Name %>
		<%= t.text_field :name%>
		<br />
		<%= t.label :Quantity %>
		<%= t.text_field :quantity%>
		<br />
		<%= t.label :Meter %>
		<%= t.text_field :meter%>
		<br />
		<%= t.label :Weight %>
		<%= t.text_field :weight%>
		<br />
		<%= t.label :SellPrice %>
		<%= t.text_field :sellprice%>
		<br />
		<%= t.label :Material %>
		<%= t.text_field :material%>
		<br />
		<%= t.label :Category %>
		<%= t.collection_select :category, @categories, :name, :name, :prompt=>true %>
		<br />
		<%= t.label :Type %>
		<%= t.collection_select :fabrictype, @type, :name, :name, :prompt=>true %>
		<br />
		<%= t.label :Link %>
		<%= t.text_field :link%>
		<br />
		<div id = "submit_button">
			Input Gambar Produk:
		<ul>
			<%= t.fields_for :product_images do |qty| %>
                            
                               <!--Where we upload multiple picture using carrierwave-->
                               <li id = "picture"><%= qty.file_field :prod_img, multiple: true, name: "inventory[product_images_attributes][][prod_img]" %><a href ="#" id ="del_pic">x</a>|<a  href="#" id = "add_more_pic">More Pic</a></li><!--call paperclip upload file-->
            <%end%>
			
		</ul>
		<br />
	
		<%= t.submit "Submit" %> <!--this submit button will go to controller create action-->
	</div>
	</p>	
<%end%>
</div>
