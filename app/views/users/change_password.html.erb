<div id = "Main_Container">
	<div id = "universal_form">
	<h1 class= "unversal_form_title">Change Password!</h1>
	<%= form_for @user,:url => {:action => 'change_password_commit'} do |f|%>
		<% if @user.errors.any? %>
			<h2>Form is Invalid</h2>
			<ul>
				<% for message in @user.errors.full_messages %>
					<li><%= message %></li>
				<%end%>
			</ul>
		<%end%>
		<div id ="new_user">
			<%= f.hidden_field :email %>
			<br/>
			<%= f.label 'Old Password' %>
			<%= f.password_field :oldpassword %>
			<br/>
			<%= f.label 'New Password' %>
			<%= f.password_field :password %>
			<br/>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>
			<br/>
			<div id ="submit_button">
		<%= f.submit%> || <%= link_to "Cancel", root_path %>
			</div>
		</div>
	<%end%>
	</div>
</div>