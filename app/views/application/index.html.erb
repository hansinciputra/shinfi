		 				<div class = "top_seller_image_index_page">
		 				<%= link_to(image_tag(img.prod_img_url(:thumb).to_s),inventory_path(img.inventory_id))%> 
		 				</div>
		 			<%end%>
				</div>
 		</div> <!--for first section div-->
