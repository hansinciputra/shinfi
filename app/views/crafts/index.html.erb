<h1>Listing crafts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pricedet</th>
      <th>User</th>
      <th>Category</th>
      <th>Price determinant</th>
      <th>Prod desc</th>
      <th>Brand</th>
      <th>Quantity</th>
      <th>Availability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crafts.each do |craft| %>
      <tr>
        <td><%= craft.name %></td>
        <td><%= craft.PriceDet_id %></td>
        <td><%= craft.user_id %></td>
        <td><%= craft.category %></td>
        <td><%= craft.price_determinant %></td>
        <td><%= craft.prod_desc %></td>
        <td><%= craft.brand_id %></td>
        <td><%= craft.quantity %></td>
        <td><%= craft.availability %></td>
        <td><%= link_to 'Show', craft %></td>
        <td><%= link_to 'Edit', edit_craft_path(craft) %></td>
        <td><%= link_to 'Destroy', craft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

